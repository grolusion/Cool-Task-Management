@model CoolTaskManagement.Models.LoginViewModel
@{
    ViewBag.Title = "CoolTask System- LogisFleet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
  @*                  @Html.Partial("_LoginPanel")*@

<div class="container">

    <div class="row">
        <div class="col-sm-6 col-sm-offset-3 r-form-1-box wow fadeInUp">
            <div class="r-form-1-top">
                <div class="r-form-1-top-left">
                    <h3>Login</h3>
                    <p>Enter Employee No. and Password :</p>
                </div>
                <div class="r-form-1-top-right">
                    <i class="fa fa-key"></i>
                </div>
            </div>
            <div class="r-form-1-bottom">
                @using (Html.BeginForm("Index", "Account", FormMethod.Post, new { role = "form" }))
                {
                    @Html.ValidationSummary(true)
                    @Html.AntiForgeryToken()



                    <div class="form-group">
                        @Html.LabelFor(a => a.EmployeeNo)
                        @Html.TextBoxFor(a => a.EmployeeNo, new { @class = "form-control" })
                        @Html.ValidationMessageFor(a => a.EmployeeNo)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(a => a.Password)
                        @Html.PasswordFor(a => a.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(a => a.Password)
                    </div>

                    <button type="submit" class="btn btn-default">Login</button>
                }
            </div>
        </div>

    </div>
</div>



                    
