                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.CompanyTelephoneNo, new { @class = "form-control", @enabled = "true" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.CompanyLat, new { @class = "control-label" })
                </div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.CompanyLat, new { @class = "form-control", @enabled = "true" })
                </div>
                <div class="col-md-3">
                    @Html.TextBoxFor(model => model.CompanyLong, new { @class = "form-control", @enabled = "true" })
                </div>
            </div>
                   
                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-4">
                            <button class="btn btn-primary btn-addon btn-sm " type="submit" value="Create">
