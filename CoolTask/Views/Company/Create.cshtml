            </div>
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.CompanyName, new { @class = "control-label" })
                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.CompanyName, new { @class = "form-control", @enabled = "true" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.CompanyDescription, new { @class = "control-label" })
                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.CompanyDescription, new { @class = "form-control", @enabled = "true" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.CompanyAddress, new { @class = "control-label" })
                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.CompanyAddress, new { @class = "form-control", @enabled = "true" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.CompanyCity, new { @class = "control-label" })
                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.CompanyCity, new { @class = "form-control", @enabled = "true" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.CompanyZipCode, new { @class = "control-label" })
                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.CompanyZipCode, new { @class = "form-control", @enabled = "true" })
